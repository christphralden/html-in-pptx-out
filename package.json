{
  "name": "html-in-pptx-out",
  "version": "0.2.2",
  "description": "Convert HTML to PowerPoint presentations with a flexible plugin architecture",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "html-in-pptx-out": "dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "demo": "npm run build &&  npx serve ."
  },
  "keywords": [
    "html",
    "powerpoint",
    "pptx",
    "converter",
    "presentation",
    "slides"
  ],
  "author": "christphralden",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christphralden/html-in-pptx-out.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "pptxgenjs": "^3.12.0"
  },
  "peerDependenciesMeta": {
    "pptxgenjs": {
      "optional": false
    }
  },
  "devDependencies": {
    "pptxgenjs": "^3.12.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.8",
    "tsdown": "^0.16.5",
    "typescript": "^5.3.3"
  }
}
